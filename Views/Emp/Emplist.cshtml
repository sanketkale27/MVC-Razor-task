@model List<Retail.Context.Emp_details>
@{
    ViewBag.Title = "Emplist";
}

<h2>Employees</h2>

<table class="table table-hover">
    <tr>
        <th>Employee Name</th>
        <th>Address</th>
        <th>Mobile no</th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>@item.EmployeeName</td>
        <td>@item.Address</td>
        <td>@item.Mobile_No</td>
        <td>
            <a href="@Url.Action("Emp",new { item.EmployeeID,item.EmployeeName,item.Address,item.Mobile_No})" class="btn btn-success">Edit</a>
            <a href="@Url.Action("Delete",new { item.EmployeeID})" class="btn btn-danger">Delete</a>
        </td>
    </tr>
    }

       

    </table>